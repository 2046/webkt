{
  "name": "webkt",
  "version": "0.0.1",
  "description": "Javascript webkit",
  "scripts": {
    "build": "npx tsc",
    "test": "npx jest",
    "dev": "npx tsc -w",
    "commit": "npx git-cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "commitizen": "^4.2.5",
    "cz-customizable": "^6.9.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz.config.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "wip"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.yml": "prettier --write",
    "*.json": "prettier --write",
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "cz.config.js"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-floating-promises": [
        "error",
        {
          "ignoreIIFE": true
        }
      ],
      "@typescript-eslint/ban-ts-comment": "off"
    },
    "env": {
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "testMatch": [
      "**/test/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
